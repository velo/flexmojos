<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>net.flexmojos.oss</groupId>
		<artifactId>flexmojos-flex-super-pom</artifactId>
		<version>%{flexmojos.version}</version>
	</parent>

	<groupId>net.flexmojos.oss.itest.issues</groupId>
	<artifactId>issue0066-swc</artifactId>
	<version>1.0-SNAPSHOT</version>

	<packaging>swc</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>net.flexmojos.oss</groupId>
				<artifactId>flexmojos-maven-plugin</artifactId>
				<version>%{flexmojos.version}</version>
				<executions>
					<execution>
						<goals>
							<goal>generate</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<!-- issue 63 -->
					<useTransitiveDependencies>true</useTransitiveDependencies>
					<!-- issue 65 -->
					<baseOutputDirectory>${project.build.directory}/generated-sources/flexmojos</baseOutputDirectory>
					<outputDirectory>${project.build.sourceDirectory}</outputDirectory>
					<typeMappings>
						<mapping>java.util.Map Object</mapping>
					</typeMappings>
					<!-- issue 62 -->
					<includeJavaClasses>
					   <class>*DTO</class>
					   <class>*Pojo</class>
					</includeJavaClasses>
					<excludeJavaClasses>
					   <class>Skip*</class>
					   <class>*.Another*</class>
					</excludeJavaClasses>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>net.flexmojos.oss.itest.issues</groupId>
			<artifactId>issue0066-jar</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
	</dependencies>

</project>
