<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.sonatype.flexmojos</groupId>
    <artifactId>flexmojos-unittest</artifactId>
    <version>4.2-beta-SNAPSHOT</version>
  </parent>

  <artifactId>flexmojos-unittest-support</artifactId>
  <packaging>swc</packaging>

  <name>Flexmojos Unit Test support</name>

  <build>
    <plugins>
      <plugin>
        <groupId>org.sonatype.flexmojos</groupId>
        <artifactId>flexmojos-maven-plugin</artifactId>
        <dependencies>
          <dependency>
            <groupId>com.adobe.flex</groupId>
            <artifactId>compiler</artifactId>
            <version>${flex.sdk.version}</version>
            <type>pom</type>
          </dependency>
        </dependencies>
        <executions>
          <execution>
            <id>gas</id>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <includeJavaClasses>
                <include>org.sonatype.flexmojos.test.report.*</include>
              </includeJavaClasses>
              <beanTemplate>
                <template>${basedir}/src/main/template/beanBase.gsp</template>
                <template>${basedir}/src/main/template/bean.gsp</template>
              </beanTemplate>
              <entityTemplate>
                <template>${basedir}/src/main/template/beanBase.gsp</template>
                <template>${basedir}/src/main/template/bean.gsp</template>
              </entityTemplate>
            </configuration>
          </execution>
          <execution>
            <id>const</id>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <generatorToUse>constraints</generatorToUse>
              <includeJavaClasses>
                <include>org.sonatype.flexmojos.test.monitor.CommConstraints</include>
              </includeJavaClasses>
            </configuration>
          </execution>
          <execution>
            <id>air</id>
            <goals>
              <goal>compile-swc</goal>
            </goals>
            <configuration>
              <classifier>air</classifier>
              <includeClasses>
                <scan>
                  <excludes>
                    <exclude>org.sonatype.flexmojos.unitestingsupport.TestApplication</exclude>
                  </excludes>
                </scan>
              </includeClasses>
            </configuration>
          </execution>
          <execution>
            <id>flex</id>
            <goals>
              <goal>compile-swc</goal>
            </goals>
            <configuration>
              <classifier>flex</classifier>
              <includeClasses>
                <scan>
                  <excludes>
                    <exclude>org.sonatype.flexmojos.unitestingsupport.TestAirApplication</exclude>
                  </excludes>
                </scan>
              </includeClasses>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <includeClasses>
            <scan>
              <excludes>
                <exclude>org.sonatype.flexmojos.unitestingsupport.TestApplication</exclude>
                <exclude>org.sonatype.flexmojos.unitestingsupport.TestAirApplication</exclude>
              </excludes>
            </scan>
          </includeClasses>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>flexmojos-tester</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>

</project>