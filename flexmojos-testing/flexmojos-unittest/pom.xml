<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>net.flexmojos.oss</groupId>
        <artifactId>flexmojos-testing</artifactId>
        <version>7.1.0-SNAPSHOT</version>
    </parent>

    <artifactId>flexmojos-unittest</artifactId>
    <packaging>pom</packaging>

    <name>Flexmojos Unit Test support - parent</name>

    <build>
        <sourceDirectory>src/main/flex</sourceDirectory>
        <plugins>
            <plugin>
                <groupId>net.flexmojos.oss</groupId>
                <artifactId>flexmojos-maven-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <!-- dita is bugged, why it doesn't surprises me? -->
                    <ditaSkip>true</ditaSkip>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>${flex.groupId}</groupId>
                        <artifactId>compiler</artifactId>
                        <version>${flex.version}</version>
                        <type>pom</type>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>${flex.groupId}.framework.air</groupId>
            <artifactId>air-framework</artifactId>
            <type>pom</type>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>${flex.groupId}.framework.air</groupId>
            <artifactId>airframework</artifactId>
            <type>swc</type>
            <scope>external</scope>
        </dependency>
        <dependency>
            <groupId>${flex.groupId}.framework</groupId>
            <artifactId>framework</artifactId>
            <type>swc</type>
            <scope>external</scope>
        </dependency>
        <dependency>
            <groupId>${flex.groupId}.framework</groupId>
            <artifactId>mx</artifactId>
            <type>swc</type>
            <scope>external</scope>
        </dependency>
        <dependency>
            <groupId>${flex.groupId}.framework</groupId>
            <artifactId>framework</artifactId>
            <type>rb.swc</type>
        </dependency>
        <dependency>
            <groupId>${flex.groupId}.framework</groupId>
            <artifactId>mx</artifactId>
            <type>rb.swc</type>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>${flex.groupId}</groupId>
                <artifactId>framework</artifactId>
                <version>${flex.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>${flex.groupId}.framework</groupId>
                <artifactId>air</artifactId>
                <version>${flex.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <modules>
        <module>flexmojos-test-coverage</module>
        <module>flexmojos-unittest-advancedflex</module>
        <module>flexmojos-unittest-asunit</module>
        <module>flexmojos-unittest-flexunit</module>
        <module>flexmojos-unittest-flexunit4</module>
        <module>flexmojos-unittest-fluint</module>
        <module>flexmojos-unittest-funit</module>
        <module>flexmojos-unittest-support</module>
    </modules>

</project>
